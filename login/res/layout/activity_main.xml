<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

<include layout="@layout/title2" />
<com.example.login.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </com.example.login.TitleLayout>


<TextView 
android:layout_marginTop="100px" 
android:id="@+id/textview"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:textColor="#ffcc00"
android:textSize="36sp"
android:text="欢迎登陆游戏大厅！"  
    
 />
<TextView
    android:id="@+id/textview_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textview"
    android:layout_below="@+id/textview"
    android:layout_marginTop="16dp"
    android:text="账号"
    android:textColor="#000000"
    android:textSize="29sp" />

<EditText
    android:id="@+id/edit_text_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/textview_name"
    android:layout_alignBottom="@+id/textview_name"
    android:layout_alignLeft="@+id/edit_text_password"
    android:ems="10"
    android:maxLines="1"
    android:textSize="29sp" />

<TextView
    android:id="@+id/textview_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textview_name"
    android:layout_below="@+id/edit_text_name"
    android:layout_marginTop="26dp"
    android:text="密码"
    android:textColor="#000000"
    android:textSize="29sp" />

<EditText
    android:id="@+id/edit_text_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_alignBaseline="@+id/textview_password"
    android:layout_alignBottom="@+id/textview_password"
    android:layout_toRightOf="@+id/textview_password"
    android:ems="10"
    android:maxLines="1"
    android:textSize="29sp"
    android:inputType="textPassword"/>

<Button
    android:id="@+id/button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/edit_text_password"
    android:layout_marginTop="20dp"
    android:text="用户登陆"
    android:textColor="#12a2fe"
    android:textSize="19sp" />

<Button
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/button"
    android:layout_alignBottom="@+id/button"
    android:layout_alignRight="@+id/edit_text_password"
    android:text="管理员登陆"
    android:textColor="#12a2fe"
    android:textSize="19sp" />

<Button
    android:id="@+id/button_zc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/button"
    android:layout_alignRight="@+id/button"
    android:layout_below="@+id/button"
    android:text="注册"
    android:textColor="#12a2fe"
    android:textSize="19sp" />

</RelativeLayout>
