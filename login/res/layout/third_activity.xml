<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.login.TitleLayout
        android:id="@+id/titleLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.login.TitleLayout>

    <TextView
        android:id="@+id/textview_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleLayout1"
        android:layout_marginTop="47dp"
        android:text="请选择游戏"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/button_mj"
        android:layout_below="@+id/textview_choice"
        android:text="扫雷"
        android:textColor="#12a2fe"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_mj"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/button_mj"
        android:src="@drawable/majiang" />

       <ImageView
           android:id="@+id/imageView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/button_card"
           android:layout_alignLeft="@+id/imageView2"
           android:layout_alignRight="@+id/imageView2"
           android:layout_alignTop="@+id/button_card"
           android:src="@drawable/card" />

       <TextView
           android:id="@+id/textView_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/titleLayout1"
           android:textColor="#ff9966"
           android:textSize="25sp" 
           android:textAppearance="?android:attr/textAppearanceLarge" />

       <Button
           android:id="@+id/button_mj"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/button_sl"
           android:layout_toLeftOf="@+id/imageView2"
           android:text="麻将"
           android:textColor="#12a2fe"
           android:textSize="19sp" />

       <Button
           android:id="@+id/button_card"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/button_mj"
           android:layout_toLeftOf="@+id/imageView2"
           android:text="纸牌"
           android:textColor="#12a2fe"
           android:textSize="19sp" />

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="86dp"
           android:layout_height="86dp"
           android:layout_above="@+id/imageView2"
           android:layout_alignParentRight="true"
           android:layout_below="@+id/textview_choice"
           android:src="@drawable/bomb" />

 <View
     android:layout_width="fill_parent"
     android:layout_height="1px"
     android:layout_alignParentLeft="true"
     android:layout_alignTop="@+id/textview_choice"
     android:background="@android:color/background_dark" />
       
</RelativeLayout>